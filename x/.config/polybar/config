# Those lines have to be added to the polybar configuration file in order
# to make the themes from this repository work

[colors]

background = ${xrdb:background}
foreground = ${xrdb:foreground}
color00    = ${xrdb:color0}
color01    = ${xrdb:color1}
color02    = ${xrdb:color2}
color03    = ${xrdb:color3}
color04    = ${xrdb:color4}
color05    = ${xrdb:color5}
color06    = ${xrdb:color6}
color07    = ${xrdb:color7}
color08    = ${xrdb:color8}
color09    = ${xrdb:color9}
color10    = ${xrdb:color10}
color11    = ${xrdb:color11}
color12    = ${xrdb:color12}
color13    = ${xrdb:color13}
color14    = ${xrdb:color14}
color15    = ${xrdb:color15}

[bar/main_bar]
monitor = ${env:MONITOR}
bottom = false
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true


background = ${colors.background}
foreground =  ${colors.foreground}

line-size = 3
line-color = ${colors.color04}

border-size = 0
border-color = ${colors.color02}

padding-left = 5
padding-right = 5

module-margin-left = 0
module-margin-right = 3

font-1 = Inconsolata:fontformat=truetype:size=11;1
font-2 = Inconsolata:fontformat=truetype:size=11;1
font-0 = Inconsolata:fontformat=truetype:size=11;1

modules-left = i3
modules-center = date
modules-right = battery wireless-network

tray-position = right
tray-padding = 9
tray-transparent = false
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-detached = false
tray-background = ${colors.background}

wm-restack = i3

;override-redirect = true


[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true

label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}

label-mode = %name%
label-mode-padding = 2
label-mode-background = ${colors.color04}

label-focused = %name%
label-focused-foreground = ${colors.color04}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.color04}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-foreground = ${colors.color04}
label-visible-underline = ${colors.color04}
label-visible-padding = 2

label-urgent = %index%
label-urgent-foreground = ${colors.color04}
label-urgent-background = ${colors.background}
label-urgent-underline = ${colors.color02}
label-urgent-padding = 2

[module/musicinfo]
type = custom/script

exec = ~/.config/polybar/music.sh
interval = 5
format = <label>
label = %output:0:30:...%
format-padding = 10
format-foreground = ${colors.color02}

[module/battery]
  type = internal/battery
  full-at = 99

  battery = BAT0
  adapter = ADP1
  poll-interval = 5

[module/date]
  type = internal/date
  interval = 5


  date =
  date-alt = "%d/%m/%Y"

  time = "%a %b %d, %I:%M %p "

  time-alt = %H:%M

  format-prefix-foreground = ${colors.foreground}
  format-underline =


  label = %date% %time%

[module/wireless-network]
  type = internal/network
  interface = wlo1
